<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="gpu_container">
    <property name="orientation">vertical</property>
    <property name="spacing">0</property>
    <property name="vexpand">true</property>
    <property name="hexpand">true</property>
    
    <!-- Chart Section -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">24</property>
        <property name="margin-end">24</property>
        <property name="margin-top">24</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkLabel">
            <property name="label">GPU Usage History</property>
            <property name="halign">start</property>
            <property name="hexpand">true</property>
            <style>
              <class name="title-2"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkFrame">
            <property name="vexpand">false</property>
            <child>
              <object class="GtkDrawingArea" id="gpu_chart">
                <property name="width-request">600</property>
                <property name="height-request">200</property>
                <property name="hexpand">true</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    <!-- GPU Information Section -->
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">24</property>
            
            <!-- GPU Info Title -->
            <child>
              <object class="GtkLabel">
                <property name="label">GPU Information</property>
                <property name="halign">start</property>
                <property name="hexpand">true</property>
                <style>
                  <class name="title-2"/>
                </style>
              </object>
            </child>
            
            <!-- GPU Name -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Name:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_name_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                    <property name="wrap">true</property>
                    <property name="selectable">true</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- GPU Driver -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Driver:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_driver_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- GPU Memory Total -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Memory Total:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_memory_total_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- GPU Memory Used -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Memory Used:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_memory_used_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Current Usage -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Current Usage:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_usage_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Temperature -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Temperature:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_temperature_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Power Usage -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Power Usage:</property>
                    <property name="halign">start</property>
                    <property name="width-chars">20</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gpu_power_value">
                    <property name="label">-</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
              </object>
            </child>
            
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
